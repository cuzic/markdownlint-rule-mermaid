{
  "name": "markdownlint-rule-mermaid",
  "version": "0.1.0",
  "description": "Markdownlint custom rule for validating Mermaid diagram syntax",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check ./src ./tests",
    "lint:fix": "biome check ./src ./tests --write",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdownlint",
    "markdownlint-rule",
    "mermaid",
    "markdown",
    "lint",
    "diagram"
  ],
  "author": "cuzic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuzic/markdownlint-rule-mermaid.git"
  },
  "bugs": {
    "url": "https://github.com/cuzic/markdownlint-rule-mermaid/issues"
  },
  "homepage": "https://github.com/cuzic/markdownlint-rule-mermaid#readme",
  "peerDependencies": {
    "markdownlint": ">=0.35.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "markdownlint": "^0.37.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "jsdom": "^27.4.0",
    "mermaid": "^11.12.2",
    "neverthrow": "^8.2.0"
  }
}
